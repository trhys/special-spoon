{
    "version": 6,
    "configurePresets": [
        {
            "name": "sandbox-debug",
            "displayName": "Sandbox DEBUG",
            "description": "(DEBUG MODE) Sandbox editor",
            "binaryDir": "build/debug",
            "cacheVariables":
            {
                "DEBUG_MODE": "ON"
            }
        },

        {
            "name": "sandbox-release",
            "displayName": "Sandbox RELEASE",
            "description": "(RELEASE MODE) Sandbox editor",
            "binaryDir": "build/release",
            "cacheVariables":
            {
                "DEBUG_MODE": "OFF"
            }
        }
    ],
    
    "buildPresets": [
        {
            "name": "sandbox-debug",
            "configurePreset": "sandbox-debug"
        },
        {
            "name": "sandbox-release",
            "configurePreset": "sandbox-release"
        }
    ]
}
