{
    "version": 6,
    "configurePresets": [
        {
            "name": "sandbox-debug",
            "displayName": "Sandbox DEBUG",
            "description": "A demo of the special-spoon engine.(DEBUG MODE)",
            "binaryDir": "build/debug",
            "cacheVariables":
            {
                "BUILD_SANDBOX": "ON",
                "DEBUG_MODE": "ON"
            }
        },

        {
            "name": "sandbox-release",
            "displayName": "Sandbox RELEASE",
            "description": "A demo of the special-spoon engine.(RELEASE MODE)",
            "binaryDir": "build/release",
            "cacheVariables":
            {
                "BUILD_SANDBOX": "ON",
                "DEBUG_MODE": "OFF"
            }
        },

        {
            "name": "core",
            "displayName": "Special-Spoon",
            "description": "The core special-spoon engine.",
            "binaryDir": "build",
            "cacheVariables":
            {
                "BUILD_SANDBOX": "OFF",
                "DEBUG_MODE": "OFF"
            }
        }
    ],
    
    "buildPresets": [
        {
            "name": "sandbox-debug",
            "configurePreset": "sandbox-debug"
        },
        {
            "name": "sandbox-release",
            "configurePreset": "sandbox-release"
        },
        {
            "name": "core",
            "configurePreset": "core"
        }
    ]
}
